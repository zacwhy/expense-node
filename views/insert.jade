extends layout

block content
    a(href="/") List of entries
    form(method="post")
        div
            input(name="date" required type="date")
        div
            input(
                min=0
                name="amount"
                placeholder="Amount"
                required
                type="number"
            )
        div
            input(autocapitalize="none" name="account_a" placeholder="From" required)
        div
            input(autocapitalize="none" name="account_b" placeholder="To" required)
        div
            input(autocapitalize="none" name="description" placeholder="Description" required)
        div
            input(type="submit")
    script.
        document.querySelector('[name=date]').valueAsDate = new Date();
