extends layout

block content
  a(href="/insert") New entry
  p Total amount: #{total.amount}

  table(border=1)
    thead
      tr
        //- th id
        th date
        th amount
        th account_a
        th account_b
        th description
    tbody
      each record in records
        tr
          //- td= record.id
          td= record.transaction_date
          td= record.amount
          td= record.account_a
          td= record.account_b
          td= record.description
